datasource db {
  provider = "sqlite"
  url = "***"
  default  = true
}

generator photon {
  provider = "photonjs"
}

model Post {
  id        String   @default(cuid()) @id @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  published Boolean
  title     String
  content   String?
  views     Int      @default(0)
  author    User?
}

model User {
  id        String   @default(cuid()) @id @unique
  email     String   @unique
  password  String
  name      String?
  posts     Post[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}