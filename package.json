{
  "name": "graphql-auth",
  "license": "MIT",
  "scripts": {
    "predev": "npm run gen:schema",
    "dev": "cross-env NODE_ENV=development tsnd --no-notify --respawn --transpileOnly ./src --watch src/schema.graphql",
    "build": "cross-env NODE_ENV=production tsc",
    "seed": "ts-node prisma/seed.ts",
    "gen:schema": "prisma2 generate",
    "db:save": "prisma2 lift save",
    "db:migrate": "prisma2 lift up"
  },
  "dependencies": {
    "@prisma/nexus": "^0.0.1",
    "bcrypt": "3.0.6",
    "dotenv": "^8.1.0",
    "graphql-shield": "6.0.5",
    "graphql-yoga": "1.18.2",
    "jsonwebtoken": "8.5.1",
    "nexus": "0.12.0-beta.6"
  },
  "devDependencies": {
    "@types/bcrypt": "3.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/jsonwebtoken": "8.3.3",
    "@types/node": "^12.7.2",
    "cross-env": "^5.2.0",
    "prisma2": "^2.0.0-preview-7",
    "ts-node": "^8.3.0",
    "ts-node-dev": "1.0.0-pre.41",
    "typescript": "3.5.3",
    "typesync": "^0.6.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
